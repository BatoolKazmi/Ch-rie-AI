{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    /*"target": "ES2022",*/
    "target": "ESNext",
    /*"module": "ES2022",*/
    "module": "ESNext",
    /*"moduleResolution": "bundler",*/
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    /*"paths": {
      "~/*": ["./app/*"]
    }*/
    "paths": {
      "@components/*": ["/src/components/ui/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
